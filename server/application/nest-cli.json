{
  "$schema": "https://json.schemastore.org/nest-cli",
  "_comment": "EdForge Education Management System - NestJS Build Configuration",
  "_comment_removed_services": "Removed 'product' and 'order' microservices - not needed for education domain. Only 'user' and 'school' microservices are used in EdForge.",
  "collection": "@nestjs/schematics",
  "sourceRoot": "microservices/user/src",
  "monorepo": true,
  "root": "microservices/user",
  "compilerOptions": {
    "webpack": true,
    "tsConfigPath": "microservices/user/tsconfig.app.json"
  },
  "projects": {
    "_comment_product_removed": "REMOVED: Product microservice - Not applicable to EdForge Education Management System",
    "_comment_order_removed": "REMOVED: Order microservice - Not applicable to EdForge Education Management System",
    "auth": {
      "type": "library",
      "root": "libs/auth",
      "entryFile": "index",
      "sourceRoot": "libs/auth/src",
      "compilerOptions": {
        "tsConfigPath": "libs/auth/tsconfig.lib.json",
        "assets": [
          "**/*.json"
        ]
      }
    },
    "client-factory": {
      "type": "library",
      "root": "libs/client-factory",
      "entryFile": "index",
      "sourceRoot": "libs/client-factory/src",
      "compilerOptions": {
        "tsConfigPath": "libs/client-factory/tsconfig.lib.json"
      }
    },
    "user": {
      "type": "application",
      "root": "microservices/user",
      "entryFile": "main",
      "sourceRoot": "microservices/user/src",
      "compilerOptions": {
        "tsConfigPath": "microservices/user/tsconfig.app.json"
      }
    },
    "school": {
      "type": "application",
      "root": "microservices/school",
      "entryFile": "main",
      "sourceRoot": "microservices/school/src",
      "compilerOptions": {
        "tsConfigPath": "microservices/school/tsconfig.app.json"
      }
    }
  }
}